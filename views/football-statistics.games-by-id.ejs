<%- include('includes/header') -%>

<script src="/js/football-statistics.js" type="text/javascript" defer></script>

<main class="container mt-3">

    <div class="row">
        <div class="col text-start">
            <h3 class=""><%= game['country']['name'] %> - <%= game['tournament']['name'] %></h3>
        </div>
        <div class="col text-end">
            <h5><%= moment.unix(game['startTime']).format('lll') %></h5>
        </div>
    </div>

    <div class="row">
        <div class="col-6 text-end">
            <h1 class="display-6 mt-3"><%= game['homeTeam']['name'] %></h1>
        </div>
        <div class="col-6 text-start">
            <h1 class="display-6 mt-3"><%= game['awayTeam']['name'] %></h1>
        </div>
    </div>


    <% if (game['homeScore'] && game['awayScore']) { %> 


        <div class="row">

            <div class="col text-center">
                <h4>
                    <small class="text-muted"><%= game['homeScore']['final'] %> - <%= game['awayScore']['final'] %>  (<%= game['homeScore']['final'] + game['awayScore']['final'] %>)</small>
                </h4>
            </div>

        </div>


    <% } %>


    <div class="row mt-4" id="graphGame" data="<%= game['id'] %>" style="min-height: 300px;">

        <div class="col-6">
            <svg id="graphHome" data="<%= game['homeTeam']['id'] %>" width="100%" height="100%"></svg>
        </div>

        <div class="col-6">
            <svg id="graphAway" data="<%= game['awayTeam']['id'] %>" width="100%" height="100%"></svg>
        </div>

    </div>


    <div class="row justify-content-center mt-4">


        <div class="col-6" id="tablePredictions">

        </div>


    </div>



    <div class="row mt-4">


        <div class="col-6" id="tableHome">

        </div>
        <div class="col-6" id="tableAway">
            
        </div>


    </div>



    <div class="row mt-4">


        <div class="col-6" id="tableHomeOpponent">

        </div>
        <div class="col-6" id="tableAwayOpponent">
            
        </div>


    </div>


</main>

<%- include('includes/footer') -%>